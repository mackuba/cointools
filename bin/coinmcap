#!/usr/bin/env ruby

require 'bundler/setup'
require 'cointools'

require 'optparse'
require 'time'

def print_help
  puts "Usage: #{$PROGRAM_NAME} <coin_name> [-v/--verbose]"
  puts " e.g.: #{$PROGRAM_NAME} litecoin"
  puts
  puts "* To look up the currency by symbol instead of name:"
  puts "       #{$PROGRAM_NAME} -s/--symbol <symbol>"
  puts " e.g.: #{$PROGRAM_NAME} -s LTC"
end

verbose = false

OptionParser.new do |opts|
  opts.on('-v', '--verbose') { verbose = true }

  opts.on('-h', '--help') do
    print_help
    exit 0
  end

  opts.on('-sSYMBOL', '--symbol SYMBOL') do |symbol|
    # TODO
  end

  opts.parse!
end

if ARGV.length != 1
  print_help
  exit 1
end

coin_name = ARGV[0].downcase

begin
  result = CoinTools::CoinMarketCap.new.get_price(coin_name)

  if verbose
    puts "#{coin_name} @ #{result.time || Time.now} ==> #{result.price}"
    puts
  else
    puts result.price
  end
rescue CoinTools::Cryptowatch::BadRequestException => e
  $stderr.puts "Error: Incorrect coin name: #{e}"
  exit 2
end
